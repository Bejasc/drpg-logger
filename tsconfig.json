{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2020",
		"rootDir": "src",
		"tsBuildInfoFile": "dist/.tsbuildinfo",
		"outDir": "./dist",
		"lib": ["ESNext"],
		"sourceMap": true,
		"inlineSources": true,
		"incremental": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"declaration": true,
		"declarationMap": true,
		"stripInternal": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
